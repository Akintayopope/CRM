<div class="column is-one-quarter">
  <div class="card has-text-centered">
    <div class="card-content">

      <!-- Customer Name -->
      <h2 class="title is-5 mb-4"><%= customer.full_name %></h2>

      <!-- Customer Image -->
      <% if customer.image_url.present? %>
        <figure class="image is-square is-inline-block mb-4">
          <%= image_tag customer.image_url, alt: customer.full_name %>
        </figure>
      <% else %>
        <figure class="image is-128x128 is-inline-block mb-4">
          <%= image_tag "https://via.placeholder.com/128", alt: "No image available" %>
        </figure>
      <% end %>

      <!-- Province -->
      <p><strong>Province:</strong> <%= customer.province.presence || "Unknown" %></p>

      <!-- Phone -->
      <p><%= customer.phone_number %></p>

      <!-- Email -->
      <% if customer.email.present? %>
        <p><%= mail_to customer.email %></p>
      <% end %>

    </div>
  </div>
</div>
